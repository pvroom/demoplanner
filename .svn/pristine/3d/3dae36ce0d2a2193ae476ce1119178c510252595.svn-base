<ion-split-pane>

	<ion-menu [content]="content" side="left" id="menu1">
		<ion-header>
			<ion-toolbar color=primary>
				<ion-title>Menu</ion-title>
				<ion-buttons end>
					<button end ion-button menuClose icon-only color="light">
						<ion-icon name="close"></ion-icon>
					</button>
				</ion-buttons>
			</ion-toolbar>
		</ion-header>

		<ion-content>
	
			<img src="assets/600x300.gif" onclick="window.open ('http://events.clearthunder.com/ORLANDO2020', '_system', 'location=yes'); return false;">
			
			<ion-list>
				<ion-item tappable style="background:linear-gradient(to bottom right, #283593 0%, #283593 100%); color:#fff" 
					(click)="NavigateToAuthenticatedPage('MyAgenda')">
					Upcoming Agenda Items
					<ion-icon name="calendar" item-left></ion-icon>
				</ion-item>


				<ion-item tappable style="color:#444" (click)="EventDetails(upcomingAgenda.visEventID)" 
					*ngFor="let upcomingAgenda of upcomingAgendaItems" id="upcomingAgenda-list-item19">
					<ion-icon item-start color="secondary" name="{{upcomingAgenda.eventTypeIcon}}"></ion-icon>
					<p style="color: #444; font-weight:bold">
					{{upcomingAgenda.EventName}}</p>		
					<p style="color:#444">
					{{upcomingAgenda.visEventTimeframe}}
					</p>
					<p>{{upcomingAgenda.EventLocation}}</p>
				</ion-item>
			
				<ion-item style="background:linear-gradient(to bottom right, #283593 0%, #283593 100%); color:#fff" (click)="NavigateToAuthenticatedPage('CETracking')">
					CE Credits Completed
					<ion-icon name="school" item-left></ion-icon>
				</ion-item>
				<ion-item tappable style="border-color: rgba(0, 0, 0, 0);background-color: rgba(0, 0, 0, 0);
					color: rgb(116, 33, 33);" (click)="NavigateToAuthenticatedPage('CETracking')" id="cetrackervalue-list" >
	
					<p style="color: #444; font-size:1.2em">
						{{creditsTypeL}}L / {{creditsTypeP}}P
					</p>
				</ion-item>


				<ion-item tappable style="background:rgb(245, 245, 245); color:#444" 
					menuClose ion-item *ngFor="let p of pages" [class.activeHighlight]="checkActive(p)" (click)="openPage(p)">
					<ion-icon color="secondary" name="{{p.icon}}" item-left></ion-icon>
					{{p.title}}
				</ion-item>
			
			</ion-list>

		</ion-content>
		
	</ion-menu>

	<ion-nav [root]="rootPage" main #content swipeBackEnabled="false"></ion-nav>

</ion-split-pane>
